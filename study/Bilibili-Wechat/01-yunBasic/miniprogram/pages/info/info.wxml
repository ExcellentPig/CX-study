<van-cell-group>
  <van-cell title="title" value="{{ product.title }}" />
  <van-cell title="price" value="{{ product.price }}" />
   <van-cell title="tag" value="{{ product.tags }}" />
  <van-cell title="color" value="{{ product.color }}" border="{{ false }}" />
</van-cell-group>
<van-button type="primary" bindtap="addTag">添加 tag</van-button>
<van-button type="warning" bindtap="deleteTag">删除</van-button>
<van-button type="danger" bindtap="updatetag">update</van-button>
<van-button type="danger" bindtap="batchUpdate">batchUpdate</van-button>
<van-button type="danger" bindtap="remove">remove</van-button>
<van-button type="batchDelete" bindtap="batchDelete">remove</van-button>
/** loading.wxss **/
.loading {
  width: 100%;
  position: absolute;
  bottom: 150rpx;
  justify-content: center;
  text-align: center;
}
 
.loading .dot{
  background-color:aquamarine;
  display: inline-block;
  /**圆点大小在这里设置，高宽一致，圆角值为高宽的一半**/
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  margin: 0 10rpx;
  opacity: 0;
}

.city {
	width: 128rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	margin: 0 auto;
	font-size: 24rpx;
}